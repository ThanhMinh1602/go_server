{
  "watch": [
    "server.js",
    "config",
    "controllers",
    "middleware",
    "models",
    "routes",
    "services"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules",
    "uploads",
    "*.log",
    ".git",
    "test"
  ],
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000
}

